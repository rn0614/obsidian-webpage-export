{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"strictNullChecks": false,
		"removeComments": false,
		"resolveJsonModule": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2021.String"
		]
	},
	"include": [
		"**/*.ts",
		"src/assets/**/*.json"
	],
	"exclude": [
		"node_modules"
	]
}
